<script>
  console.log("Header Debug:", {
    userDefined: typeof user !== 'undefined',
    hasUser: typeof user !== 'undefined' && !!user,
    userValue: typeof user !== 'undefined' ? user : null
  });

  function toggleMenu() {
    const menu = document.getElementById("dropdownMenu");
    if (menu) menu.classList.toggle("active");
  }
  
  // B·∫Øt s·ª± ki·ªán click ngo√†i menu ƒë·ªÉ ƒë√≥ng menu
  document.addEventListener("click", function(e) {
    const menu = document.getElementById("dropdownMenu");
    const avatarContainer = document.querySelector(".avatar-container");
    if (menu && avatarContainer && !avatarContainer.contains(e.target)) {
      menu.classList.remove("active");
    }
  });
  
  function showPopup() {
    const overlay = document.querySelector(".popup-overlay");
    if (overlay) overlay.style.display = "flex";
  }
  
  // ƒê√≥ng popup khi click v√†o n√∫t ƒë√≥ng
  document.querySelector(".popup-close")?.addEventListener("click", function() {
    const overlay = document.querySelector(".popup-overlay");
    if (overlay) overlay.style.display = "none";
  });

  // X·ª≠ l√Ω t√¨m ki·∫øm t·ª± ƒë·ªông g·ª£i √Ω
  document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('search-input');
    const suggestionsContainer = document.getElementById('search-suggestions');
    let debounceTimer;

    // Th√™m CSS inline cho search suggestions
    const style = document.createElement('style');
    style.innerHTML = `
      .search-container {
        position: relative;
        width: 100%;
      }
      
      .search-suggestions {
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        max-height: 300px;
        overflow-y: auto;
        background-color: white;
        border-radius: 0 0 8px 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        z-index: 1000;
        display: none;
      }
      
      .search-suggestions.show {
        display: block;
      }
      
      .suggestion-item {
        padding: 10px 15px;
        border-bottom: 1px solid #eee;
        cursor: pointer;
        display: flex;
        align-items: center;
      }
      
      .suggestion-item:hover {
        background-color: #f5f5f5;
      }
      
      .suggestion-item img {
        width: 50px;
        height: 50px;
        object-fit: cover;
        margin-right: 10px;
        border-radius: 4px;
      }
      
      .suggestion-item-content {
        flex: 1;
      }
      
      .suggestion-item-content h4 {
        margin: 0 0 5px 0;
        font-size: 14px;
        color: #333;
      }
      
      .suggestion-item-content p {
        margin: 0;
        font-size: 12px;
        color: #666;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
      }
    `;
    document.head.appendChild(style);

    // H√†m x·ª≠ l√Ω t√¨m ki·∫øm
    searchInput.addEventListener('input', function() {
      const query = this.value.trim();
      
      clearTimeout(debounceTimer);
      
      if (query.length < 2) {
        suggestionsContainer.classList.remove('show');
        suggestionsContainer.innerHTML = '';
        return;
      }
      
      debounceTimer = setTimeout(function() {
        fetch(`/api/search-suggestions?q=${encodeURIComponent(query)}`)
          .then(response => response.json())
          .then(data => {
            suggestionsContainer.innerHTML = '';
            
            if (data.suggestions && data.suggestions.length > 0) {
              suggestionsContainer.classList.add('show');
              
              data.suggestions.forEach(item => {
                const suggestionItem = document.createElement('div');
                suggestionItem.className = 'suggestion-item';
                suggestionItem.innerHTML = `
                  <img src="${item.image || '/assets/img/default-news.jpg'}" alt="${item.title}" />
                  <div class="suggestion-item-content">
                    <h4>${item.title}</h4>
                    <p>${item.description || ''}</p>
                  </div>
                `;
                
                suggestionItem.addEventListener('click', function() {
                  window.location.href = `/news-detail?id=${item.id}`;
                });
                
                suggestionsContainer.appendChild(suggestionItem);
              });
            } else {
              suggestionsContainer.classList.remove('show');
            }
          })
          .catch(error => {
            console.error('L·ªói t√¨m ki·∫øm:', error);
            suggestionsContainer.classList.remove('show');
          });
      }, 300); // ƒê·ª£i 300ms sau khi ng∆∞·ªùi d√πng ng·ª´ng g√µ
    });
    
    // ƒê√≥ng suggestions khi click b√™n ngo√†i
    document.addEventListener('click', function(e) {
      if (!searchInput.contains(e.target) && !suggestionsContainer.contains(e.target)) {
        suggestionsContainer.classList.remove('show');
      }
    });
    
    // ƒê√≥ng suggestions khi nh·∫•n Escape
    searchInput.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        suggestionsContainer.classList.remove('show');
      }
    });
  });
</script> 