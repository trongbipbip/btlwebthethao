      import { userAdmin } from "../data/adminData.js";

      // Hàm khởi tạo dữ liệu từ adminData.js nếu localStorage chưa có
      function initializeUserData() {
        const storedUserData = localStorage.getItem("user");

        if (!storedUserData) {
          localStorage.setItem("user", JSON.stringify(users));
        }
      }

      // Hàm hiển thị dữ liệu lên UI
      function loadUserData() {
        const storedUserData = localStorage.getItem("user");

        if (storedUserData) {
          const user = JSON.parse(storedUserData)[0]; // Lấy người dùng đầu tiên

          if (user) {
            // Cập nhật tên Admin
            const adminNameElement = document.querySelector(".admin-name");
            if (adminNameElement) {
              adminNameElement.textContent = user.name;
            }

            // Cập nhật Avatar
            const avatarElement = document.querySelector("#avatar-img");
            if (avatarElement) {
              if (user.avatar.startsWith("/")) {
                user.avatar = ".." + user.avatar;
              }
              avatarElement.src = user.avatar;
            }
          }
        }
      }

      // Hàm xử lý đăng xuất
      function logout() {
        localStorage.clear();
        window.location.href = "../login/login_admin.html";
      }

      document.addEventListener("DOMContentLoaded", () => {
        const logoutButton = document.getElementById("logout-btn");
        if (logoutButton) {
          logoutButton.addEventListener("click", (e) => {
            e.preventDefault();
            logout();
          });
        }
      });

      document.addEventListener("DOMContentLoaded", () => {
        initializeUserData(); // Đảm bảo dữ liệu đã có trong localStorage
        loadUserData(); // Hiển thị dữ liệu lên UI
      });
    </script>
    <script>
      // Hàm xử lý xóa danh mục
      function deleteCategory(categoryId) {
        if (confirm('Bạn có chắc chắn muốn xóa danh mục này?')) {
          // Tạo form để gửi POST 
          var form = document.createElement('form');
          form.method = 'POST';
          form.action = `/admin/categories/delete/${categoryId}`;
          form.style.display = 'none';
          
          // Thêm form vào body và submit
          document.body.appendChild(form);
          form.submit();
        }
      }

      // Đăng ký sự kiện click cho các nút xóa
      document.addEventListener('click', function(event) {
        if (event.target.classList.contains('btn-delete')) {
          const categoryId = event.target.getAttribute('data-id');
          deleteCategory(categoryId);
        }
      });
    </script>
