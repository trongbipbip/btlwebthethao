    <style>
      /* CSS cho hiển thị giải đấu theo năm */
      .tournament-year {
        margin-bottom: 30px;
      }
      
      .tournament-year h3 {
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 15px;
        color: #333;
        padding-bottom: 5px;
        border-bottom: 2px solid #f0f0f0;
      }
      
      .tournament-list {
        display: flex;
        flex-direction: column;
        gap: 10px;
      }
      
      .tournament-list .tournament-item {
        padding: 0;
        border: 1px solid #eee;
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s;
      }
      
      .tournament-list .tournament-item:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
      }
      
      .tournament-list .tournament-item a {
        display: flex;
        flex-direction: row;
        align-items: center;
        text-decoration: none;
        color: inherit;
        padding: 15px;
      }
      
      .tournament-image {
        width: 70px;
        height: 70px;
        overflow: hidden;
        margin-right: 15px;
        flex-shrink: 0;
      }
      
      .tournament-image img {
        width: 100%;
        height: 100%;
        object-fit: contain;
      }
      
      .tournament-info {
        display: flex;
        flex-direction: column;
      }
      
      .tournament-info h4 {
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 5px;
        color: #222;
      }
      
      .tournament-location {
        color: #666;
        font-size: 14px;
        margin-bottom: 3px;
      }
      
      .tournament-date {
        color: #888;
        font-size: 13px;
      }
      
      .search-container {
        position: relative;
        width: 100%;
      }
      
      .search-suggestions {
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        max-height: 300px;
        overflow-y: auto;
        background-color: white;
        border-radius: 0 0 8px 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        z-index: 1000;
        display: none;
      }
      
      .search-suggestions.show {
        display: block;
      }
      
      .no-tournaments {
        text-align: center;
        padding: 30px;
        background: #f9f9f9;
        border-radius: 8px;
        color: #666;
      }
    </style>
  </head>
  <body>
    <%- include('partials/header') %>
    <!-- Popup -->
    <div id="login-popup"></div>
    <main>
      <div class="tournament-block">
        <div class="main-content">
          <h1>GIẢI ĐẤU | Những giải đấu trong năm</h1>
          <div class="tournaments">
            <div class="event-block">
              <div class="search-box">
                <div class="search-container">
                  <input type="text" id="searchBar" name="q" placeholder="Tìm kiếm giải đấu" autocomplete="off" />
                  <div id="tournament-suggestions" class="search-suggestions"></div>
                </div>
                <button>
                  <img src="/assets/img/search.svg" alt="Search" />
                </button>
              </div>
              <div class="event">
                <div id="calendar">
                  <% if (Object.keys(tournaments).length === 0) { %>
                    <div class="no-tournaments">
                      <p>Hiện chưa có giải đấu nào được tìm thấy.</p>
                    </div>
                  <% } else { %>
                    <% Object.keys(tournaments).sort((a, b) => {
                        // Sắp xếp các trạng thái theo thứ tự mong muốn
                        const order = { 'Đang hoạt động': 1, 'Sắp diễn ra': 2, 'Đã kết thúc': 3 };
                        return (order[a] || 99) - (order[b] || 99);
                    }).forEach(status => { %>
                      <% const tournamentList = tournaments[status]; %>
                      <% if (tournamentList && tournamentList.length > 0) { %>
                        <div class="tournament-year">
                          <h3><%= status %></h3>
                          <div class="tournament-list">
                            <% tournamentList.forEach(tournament => { %>
                              <div class="tournament-item">
                                <a href="/event?id=<%= tournament.id %>">
                                  <div class="tournament-image">
                                    <%
                                      let imagePath = '/assets/img/tennis-logo.png'; // Ảnh mặc định
                                      if (tournament.image && tournament.image.startsWith('/assets')) {
                                        imagePath = tournament.image; // Sử dụng ảnh từ DB nếu hợp lệ
                                      } else if (tournament.image) {
                                        imagePath = '/uploads/' + tournament.image; // Nếu là tên file, thêm tiền tố /uploads/
                                      }
                                    %>
                                    <img src="<%= imagePath %>" alt="<%= tournament.name %>" />
                                  </div>
                                  <div class="tournament-info">
                                    <h4><%= tournament.name %></h4>
                                    <p class="tournament-location"><%= tournament.location || 'N/A' %></p>
                                    <%# Hiển thị ngày nếu có %>
                                    <% if (tournament.start_date && tournament.end_date) { %>
                                      <p class="tournament-date">
                                        <%= new Date(tournament.start_date).toLocaleDateString('vi-VN') %> - <%= new Date(tournament.end_date).toLocaleDateString('vi-VN') %>
                                      </p>
                                    <% } else if (tournament.start_date) { %>
                                      <p class="tournament-date">
                                        Bắt đầu: <%= new Date(tournament.start_date).toLocaleDateString('vi-VN') %>
                                      </p>
                                    <% } %>
                                    <%# Hiển thị thông tin khác nếu có %>
                                    <% if (tournament.surface) { %>
                                      <p class="tournament-detail">Mặt sân: <%= tournament.surface %></p>
                                    <% } %>
                                    <% if (tournament.prize) { %>
                                      <p class="tournament-detail">Tiền thưởng: <%= tournament.prize %></p>
                                    <% } %>
                                  </div>
                                </a>
                              </div>
                            <% }); %>
                          </div>
                        </div>
                      <% } %>
                    <% }); %>
                  <% } %>
                </div>
                <div class="portraits">
                  <h2 class="portraits-title">
                    Chân dung của những nhà vô địch trước
                  </h2>
                  <div class="portrait-list">
                    <div class="portrait-item">
                      <img src="/assets/img/portrait1.png" alt="" />
                      <p class="portrait-name">
                        Serena Williams Saginaw, Michigan
                      </p>
                    </div>
                    <div class="line"></div>
                    <div class="portrait-item">
                      <img src="/assets/img/portrait2.png" alt="" />
                      <p class="portrait-name">
                        Jannik Sinner Innichen, Northen Italy
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="news-container">
              <div class="news-header">
                <h2>TIN TỨC</h2>
                <a href="/categorynews">Xem thêm</a>
              </div>
              <div class="news-block">
                <!-- Tin nổi bật giống hình minh họa -->
                <div class="featured-news">
                  <a href="/news?id=1">
                    <img src="/assets/img/featured-new.png" alt="Người Mỹ gốc Séc được khen thưởng" />
                    <p>
                      Người Mỹ gốc Séc được khen thưởng 15 danh hiệu trong mùa
                      giải
                    </p>
                  </a>
                </div>
                <div class="news-list">
                  <div class="news-item">
                    <a href="/news?id=2">
                      <img src="/assets/img/more-news1.png" alt="" />
                      <p>
                          Ngôi sao trẻ của Na Uy "Budkov Kjaer" tham gia cùng Ruud
